<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>ğŸ½ï¸ Listing Restaurants</h1>
    <%= link_to "â• New Restaurant", new_restaurant_path, class: "btn btn-primary" %>
  </div>

  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card shadow-sm border-0">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to restaurant.name, restaurant_path(restaurant), class: "text-dark fw-bold text-decoration-none" %>
            </h5>
            <p class="card-text text-muted"><i class="bi bi-geo-alt-fill"></i> <%= restaurant.address %></p>
            <p class="card-text"><strong>ğŸ“ Phone:</strong> <%= restaurant.phone_number %></p>
            <p class="card-text"><strong>ğŸ´ Category:</strong> <span class="badge bg-primary"><%= restaurant.category.capitalize %></span></p>

            <p class="card-text">
              <strong>â­ Average Rating:</strong>
              <% if restaurant.reviews.any? %>
                <%= number_with_precision(restaurant.reviews.average(:rating), precision: 1) %>/5
              <% else %>
                <span class="text-muted">No reviews yet</span>
              <% end %>
            </p>

            <a href="<%= restaurant_path(restaurant) %>" class="btn btn-outline-primary btn-sm">
              View Details
            </a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
